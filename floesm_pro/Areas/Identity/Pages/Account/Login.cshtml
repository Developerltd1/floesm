@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}
<head>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link href="~/css/login.css" rel="stylesheet" />
</head>

<div class="row mx-0 h-100">
    <div class="col-xl-5 col-lg-6 p-0 h-100">
        <section class="login-left-section">
            <div class="login-text pb-5">
                <h3>Login</h3>
            </div>
            <form id="account" method="post">
                
                @*<div asp-validation-summary="All" class="text-danger"></div>*@
                <div class="form-group mb-4">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="login-input form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="login-input form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger danger"></span>
                </div>
                <div class="form-group d-flex align-items-center justify-content-between mb-5">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary login-btn">Log in</button>
                </div>
                <div class="form-group">
                   
                    <p class="text-center new-user mt-5">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p class="d-none">
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="img-section col-xl-7 col-lg-6 h-100 p-4">
        <div>
            <div>
                <img class="w-100 h-100" src="https://image.freepik.com/free-photo/mock-up-wooden-photo-frame-wooden-shelf-with-decoration-3d-rendering_41470-3614.jpg" />
            </div>
        </div>
        @*<section>
            <h4>Use another service to log in.</h4>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
